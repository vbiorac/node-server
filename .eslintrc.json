{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "airbnb-base",
        "airbnb-typescript/base"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module",
        "project": "./tsconfig.json"
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "rules": {
        "max-len": [
            1,
            {
                "code": 140,
                "tabWidth": 4,
                "ignoreUrls": true
            }
        ],
        "no-underscore-dangle": [
            2,
            {
                "allowAfterThis": true
            }
        ],
        "import/no-extraneous-dependencies": "warn",
        "no-console": "warn"
    }
}
